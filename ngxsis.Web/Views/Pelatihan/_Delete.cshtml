                if (varStatus.status == "Berhasil") {
                    alert("data berhasil didelete");
                    //location.replace('Pelatihan');
                    //window.location.reload(true);
                    $(".modal-delete").modal("hide");
                    $(".modal-pelamar").modal("show");
                }
                else {
                    alert("data gagal didelete");
                    location.replace('Pelatihan');
                    //window.location.reload(true);
                    $(".modal-delete").modal("hide");
