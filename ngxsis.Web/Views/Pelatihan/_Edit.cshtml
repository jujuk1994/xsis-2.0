<form id="idFormEditPelatihan">
    <div class="form-horizontal">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h6 style="margin-bottom:2px;">Nama Training*</h6>
                            <input required type="text" id="idEditTraining" class="form-control" name="training_name" value="" placeholder="Nama Training" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;" /><br />
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h6 style="margin-bottom:2px;">Nama Penyelenggara*</h6>
                            <input required type="text" id="idEditOrganizer" class="form-control" name="organizer" value="" placeholder="Nama Penyelenggara" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;" /><br />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <h6 style="margin-bottom:2px;">Bulan Pelatihan</h6>
                    <select class="form-control" id="idEditBulanPelatihan" name="training_month" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;">
                        <option>- Pilih -</option>
                        <option value="1">Januari</option>
                        <option value="2">Februari</option>
                        <option value="3">Maret</option>
                        <option value="4">April</option>
                        <option value="5">Mei</option>
                        <option value="6">Juni</option>
                        <option value="7">Juli</option>
                        <option value="8">Agustus</option>
                        <option value="9">September</option>
                        <option value="10">Oktober</option>
                        <option value="11">November</option>
                        <option value="12">Desember</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <h6 style="margin-bottom:2px;">Tahun Pelatihan</h6>
                    <select id="yearBtnAddPelatihan" class="form-control" name="training_year" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;"></select>
                </div>

                <div class="col-md-3">
                    <h6 style="margin-bottom:2px;">Durasi</h6>
                    <input type="number" class="form-control" id="idEditTrainingDuration" name="training_duration" value="" placeholder="" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;" /><br />
                </div>
                <div class="col-md-3">
                    <h6 style="margin-bottom:2px;">&nbsp;</h6>
                    <select id="periodBtnCreatePelatihan" class="form-control" name="time_period_id" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;">
                        <option>- Pilih -</option>
                        <option value="1">Hari</option>
                        <option value="2">Minggu</option>
                        <option value="3">Bulan</option>
                        <option value="4">Tahun</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h6 style="margin-bottom:2px;">Kota</h6>
                            <input type="text" id="idEditCity" class="form-control" name="city" value="" placeholder="Kota" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;" /><br />
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h6 style="margin-bottom:2px;">Negara</h6>
                            <input type="text" id="idEditCountry" class="form-control" name="country" value="" placeholder="Negara" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;" /><br />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h6 style="margin-bottom:2px;">Catatan</h6>
                            <input type="text" id="idEditCountry" class="form-control" name="notes" value="" placeholder="Catatan" style="padding-left:10px; border: 2px solid #000080; color: #000080; border-radius:7px; width:100%; max-width:100%; height:40px;" /><br />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="btn-group col-md-offset-8">
                    <button class="btn img-rounded " style="width:90px; height:30px; color:white; background-color:#FF8C00;">Batal</button>
                    <button type="button" name="" id="btnSimpanEditPelatihan" value="Simpan" class="btn img-rounded " style="width:90px; height:30px; color:white; background-color:#000080;">Simpan</button>
                </div>
            </div>
        </div>
    </div>
    <input type="text" name="modified_by" value=5 hidden />
    <input type="text" name="modified_on" value=2019-08-08 hidden />
    <input type="text" name="delete_by" value="5" hidden />
    <input type="text" name="delete_on" value="2019-08-08" hidden />
    <input type="text" name="biodata_id" value=1 hidden />
    <input type="text" name="id" value="" hidden id="idDatanyaPlth" />

</form>
<script>
    var start = 1995;
    var end = new Date().getFullYear();
    var options = '<option value="">- Pilih -</option>';
    for (var year = start ; year <= end; year++) {
        options += "<option>" + year + "</option>";
    }
    $('#yearBtnAddPelatihan').html(options);

    $(document).ready(function () {
        $('#btnSimpanEditPelatihan').click(function () {
            var vDataEditPelatihan = $('#idFormEditPelatihan').serialize();
            debugger;
            $.ajax({
                url: '/Pelatihan/SaveEditPelatihan',
                data: vDataEditPelatihan,
                type: 'post',
                success: function (mdl) {
                    debugger;
                    if (mdl.status == "Berhasil") {
                        alert("data berhasil di edit");
                        $(".modal-create").modal("hide");
                        $(".modal-pelamar").modal("show");
                        //location.replace('Pelatihan');
                        //window.location.reload(true);
                    }
                    else {
                        alert("data gagal di edit");
                        location.replace('Pelatihan');
                        $(".modal-create").modal("hide");
                        $(".modal-pelamar").modal("show");
                        window.location.reload(true);
                    }
                }

            });
        });
    })
</script>